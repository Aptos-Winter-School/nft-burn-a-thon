{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "esnext",
    "pretty": true
  },
  "include": [
    "*.ts"
  ],
  "paths": {
    "@aptos/*": "../..",
  }
}
